@model TareaCRUD.Models.Cliente
@{
    ViewData["Title"] = "Crear Cliente";
}

<h4>Nuevo Cliente</h4>
<form asp-action="Create" method="post" class="col s12">
    <div class="row">
        <div class="input-field col s6">
            <input asp-for="Nombre" id="Nombre" type="text" required />
            <label for="Nombre">Nombre</label>
            <span asp-validation-for="Nombre" class="red-text"></span>
        </div>
        <div class="input-field col s6">
            <input asp-for="Email" id="Email" type="email" required />
            <label for="Email">Email</label>
            <span asp-validation-for="Email" class="red-text"></span>
        </div>
    </div>
    <button type="submit" class="btn waves-effect waves-light">Guardar</button>
    <a asp-action="Index" class="btn grey">Volver</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            M.updateTextFields();
        });
    </script>
}
